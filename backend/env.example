# Server Configuration
PORT=3001
NODE_ENV=development

# Google Sheets API
GOOGLE_SHEETS_PRIVATE_KEY=your_private_key_here
GOOGLE_SHEETS_CLIENT_EMAIL=your_client_email_here
GOOGLE_SHEETS_PROJECT_ID=your_project_id_here

# OpenAI API (for AI clustering)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud NLP (alternative to OpenAI)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_CREDENTIALS=path_to_service_account_key.json

# Security
JWT_SECRET=your_jwt_secret_here
# You can set multiple allowed origins as a comma-separated list, supports wildcards like https://*.vercel.app
CORS_ORIGINS=http://localhost:3000
# CORS_ORIGIN is kept for backward compatibility if you prefer a single origin
# CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 